<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>

        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="post">
                <input type="hidden" name="_method" value="PUT">

                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Title" value="{{ note.title }}">
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" name="description" placeholder="Description" value="{{note.description}}">
                </div>

                <div class="form-grup">
                    <button type="submit" class="btn btn-success btn-block">Edit !</button>
                </div>
            </form>
        </div>
    </div>
</div>