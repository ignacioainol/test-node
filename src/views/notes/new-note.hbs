<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>New Note</h3>
        </div>

        <div class="card-body">
            <form action="/notes/new-note" method="post">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" autofocus placeholder="Title">
                </div>

                <div class="form-group">
                    <textarea name="description" id="" class="form-control" placeholder="Description... "></textarea>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-block">Add Note !</button>
                </div>

            </form>

        </div>
    </div>
</div>